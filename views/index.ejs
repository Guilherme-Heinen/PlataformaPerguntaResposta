<%- include ('partials/header.ejs') %>
<body>

<%- include ('partials/navbar.ejs') %>
    
    <div class="container"> 
        <h1>Perguntas</h1>
        <a href="/perguntar" class="btn btn-dark">Perguntar</a> 
        <hr>
        <% perguntas.forEach(pergunta => { %>
            <div class="card" id="tabela">
                <div class="card-body">
                    <%= pergunta.titulo %>
                </div>
                <div class="card-footer">
                    <a href="/pergunta/<%= pergunta.id %>"><button class="btn btn-dark">Responder</button></a>
                </div>  
            </div>
        <% }) %>
    </div>
</body>

<%- include ('partials/footer.ejs') %>